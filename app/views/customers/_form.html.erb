<%= form_for (@customer) do |f|%>

<p>
	<%= f.label      :first_name %> &nbsp;&nbsp;&nbsp;&nbsp;
	<%= f.text_field :first_name %>
</p>

<p>
	<%= f.label      :last_name %> &nbsp;
	<%= f.text_field :last_name %>
</p>

<p>
	<%= f.label       :email %> &nbsp;
	<%= f.email_field :email %>
</p>

<p>
	<%= f.label      :mobile_number %> &nbsp;
	<%= f.text_field :mobile_number %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>