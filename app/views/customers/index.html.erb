<h1>List of customers</h1>

<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>First Name   </th>
				<th>Last  Name   </th>
				<th>Email        </th>
				<th>Mobile Number</th>
				<th>Updated At   </th>
			</tr>
		</thead>
		<tbody>
			<% @customers.each do |customer|%>
				<tr>
					<td><%= customer.first_name    %></td>
					<td><%= customer.last_name     %></td>
					<td><%= customer.email         %></td>
					<td><%= customer.mobile_number %></td>
					<td><%= customer.updated_at    %></td>
					<td><%= link_to 'Show',customer_path(customer),class: "btn btn-xs btn-primary"%></td>
					<td><%= link_to 'Destroy', customer_path(customer), method: :delete, data: {confirm: 'Are you
					sure?'},class: "btn btn-xs btn-primary"%></td>
					</tr>
			<% end %>
		</tbody>	
	</table>
</div>