<h1>List of customers</h1>

<br>
<%= link_to 'New',new_customer_path%>
<br>

<table>
	<tr>
		<th>First Name   </th>
		<th>Last  Name   </th>
		<th>Email        </th>
		<th>Mobile Number</th>
		<th>Updated At   </th>
	</tr>
	
	<% @customers.each do |customer|%>
	<tr>
		<td><%= customer.first_name    %></td>
		<td><%= customer.last_name     %></td>
		<td><%= customer.email         %></td>
		<td><%= customer.mobile_number %></td>
		<td><%= customer.updated_at    %></td>
		<td><%= link_to 'Show',customer_path(customer)%></td>
		<td><%= link_to 'Destroy', customer_path(customer), method: :delete, data: {confirm: 'Are you sure?'}%></td>
		</tr>
	<% end %>
		
</table>