<h1>List of customers</h1>

<br>
<br>

<table>
	<tr>
		<th>First Name   </th>
		<th>Last  Name   </th>
		<th>Email        </th>
		<th>Mobile Number</th>
	</tr>
	
	<% @customers.each do |customer|%>
	<tr>
		<td><%= customer.first_name    %></td>
		<td><%= customer.last_name     %></td>
		<td><%= customer.email         %></td>
		<td><%= customer.mobile_number %></td>
	</tr>
	<% end %>
		
</table>