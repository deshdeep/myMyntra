<h1>Edit profile info</h1>

<%= form_for (@customer) do |f| %>

<p>
	<%= f.label       :first_name%>
	<%= f.text_field  :first_name%>
</p>

<p>
	<%= f.label       :last_name%>
	<%= f.text_field  :last_name%>
</p>

<p>
	<%= f.label       :email%>
	<%= f.email_field :email%>
</p>

<p>
	<%=f.label 	      :mobile_number%>
	<%=f.text_field   :mobile_number%>
</p>

<p>
	<%= f.submit%>
</p>

<% end %>