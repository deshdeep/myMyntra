<h1>All Products</h1>

<br>
<h3>
<%= link_to 'New',new_product_path%>
</h3>
<br>

<table>
	<tr>
		<th>Name</th>
		<th>Brand</th>
		<th>Price</th>
		<th>Size</th>
		<th>Category</th>
		<th>Updated At</th>
	</tr>
	
	<% @products.each do |product| %>
		<tr>
			<td><%= product.name %></td>
			<td><%= product.brand %></td>
			<td><%= product.price %></td>
			<td><%= product.size %></td>
			<td><%= product.category %></td>
			<td><%= product.updated_at %></td>
			<td><%= link_to 'Show',product_path(product)%></td>
			<td><%= link_to 'Buy','#'%></td>
			<td><%= link_to 'Destroy',product_path(product), method: :delete, data: {confirm: 'Are you sure?'}%></td>
		</tr>
	<% end %>

</table>